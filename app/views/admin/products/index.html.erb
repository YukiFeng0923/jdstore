

<div class="pull-right",style="padding-bottom: 20px;">
  <%= link_to("新增产品",new_admin_product_path, class:"btn btn-primary btn-sm")  %>
</div>
<ul>
  <% @products.each do |product| %>
  <li>
    <%=link_to(product.title, admin_product_path(product)) %>
    <%=link_to("Edit",edit_admin_product_path(product),class: "btn btn-sm btn-default")  %>
    <%=link_to("Delete",admin_product_path(product),class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
  </li>
<% end  %>
</ul>
