<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <h2>Sign up</h2>

        <div>
          <%=  simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|  %>
            <div class="form-input">
              
              <%= f.input :email, required: false, placeholder: "邮箱", input_html: { class: "form-control input-lg" } %>
              <%= f.input :password, required: false, hint: ("最少需要#{@minimum_password_length}数字或字母" if @minimum_password_length ), input_html: { class: "form-control input-lg" }, placeholder: "输入密码" %>
              <%= f.input :password_confirmation, required: false, placeholder: "再次输入密码", input_html: { class: "form-control input-lg" } %>
            </div>
            <hr>
            <div>
              点击下面的“注册账户”表明您同意
              <a href="#">用户协议</a>
            </div>
            <hr>
            <div class="form-actions text-center">
              <%= f.submit "注册账户", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
        <span class="pull-right">已有账户，<%= render "devise/shared/links" %></span>
    </div>
</div>
